extends layout

block content

  h1 Delete Genre: #{genre.name}
  
  if genre_books.length
  
    p(class='notice') Delete the following books before attempting to delete this genre:
    hr
    dl
    each book in genre_books
      dt 
        a(href=book.url) #{book.title}
      dd #{book.summary}

  else
    div(class='center')
      p Do you really want to delete this genre?
      form(method='POST' action='')
        div.form-group
          input#id.form-control(type='hidden',name='id', required='true', value=genre._id )

        button.btn.btn-primary(type='submit') Delete