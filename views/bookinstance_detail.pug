extends layout

block content

  h2 ID: #{bookinstance._id}
  
  p #[strong Title:] 
    a(href=bookinstance.book.url) #{bookinstance.book.title}
  p #[strong Imprint:] #{bookinstance.imprint}

  p #[strong Status:] 
    if bookinstance.status=='Available'
      span(class='label-text available') #{bookinstance.status}
    else if bookinstance.status=='Maintenance'
      span(class='label-text maintenance') #{bookinstance.status}
    else
      span(class='label-text loaned') #{bookinstance.status} 
      
  if bookinstance.status!='Available'
    p #[strong Due back:] #{bookinstance.due_back_formatted}

  hr
  br
  p.styled-link
    a(href=bookinstance.url+'/update') Update Book Copy
  p.styled-link-del
    a(href=bookinstance.url+'/delete') Delete Book Copy
